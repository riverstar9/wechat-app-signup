Page {
  font-weight: 900;
}

.title {
  margin: 40rpx 0;
  font-size: 60rpx;
  transform: skew(-10deg);
  text-align: center;
  color: transparent;  
  -webkit-text-stroke: 3rpx #ffb400;  
}

.text {
  margin: 10rpx 50rpx;
  font-size: 24rpx;
}

.text>text {
  color: #ffb400;
}

textarea{
  margin: 50rpx auto;
  padding: 15rpx 25rpx;
  height: 380rpx;
  height: 500rpx;
  width: 610rpx;
  border: 10rpx solid black;
  border-radius: 40rpx;
  font-size: 40rpx;
}

.placeholder {
  color: rgba(0, 0, 0, 0.4);
}

.button {
  margin: 65rpx auto;
  padding: 0;
  outline: 0;
  height: 100rpx;
  width: 500rpx;
  background-color: white;
  border: 10rpx solid black;
  border-radius: 35rpx;
  box-shadow: 0 12rpx #ffb400;
  font-size: 45rpx;
  font-weight: 900;
  letter-spacing: 2rpx;
  line-height: 75rpx;
}

.button>button::after {
  border: none;
}