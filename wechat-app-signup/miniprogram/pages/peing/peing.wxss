Page {
  font-weight: 900;
}

.box {
  margin: 20rpx auto;
  margin-top: 45rpx;
  padding: 35rpx;
  width: 600rpx;
  border: 8rpx solid black;
  border-radius: 35rpx;
  background-color: white;
  font-size: 28rpx;
}

.peingDetails {
  display: flex;
  flex-direction: column-reverse;
}

.peingBox {
  margin: 20rpx auto;
  padding-bottom: 0rpx;
}

.row {
  width: 100%;
}

.row view {
  display: inline-block;
  vertical-align: top;
}

.row.right {
  margin-top: 32rpx;
  text-align: right;
}

.ch {
  margin-top: -40rpx;
  color: #ffb400;
  font-size: 108rpx;
  transform: skew(-10deg);
  opacity: 0.6;
}

.text {
  width: 80%;
  word-wrap: break-word;
  word-break: normal;
}

.text.q {
  margin-left: 28rpx;
}

.text.a {
  margin-right: 28rpx;
}

.peing-container {
  position: fixed;
  right: 50rpx;
  bottom: 80rpx;
  z-index: 2;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  box-shadow: 0px 3px 8px 0px #ffb3003d;
  display: flex;
  justify-content: center;
  background-color: #fff;
  align-items: center;
}

.peing-img {
  width: 50rpx;
  height: 50rpx;
}